# Contract Crown Environment Configuration for Raspberry Pi
# Copy this file to .env and update the values

# JWT Configuration
JWT_SECRET=contract-crown-raspberry-pi-jwt-secret-change-this-to-something-secure
JWT_EXPIRES_IN=24h

# CORS Configuration (allow all origins for local network access)
CORS_ORIGIN=*

# Rate Limiting (more lenient for small deployments)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=60000

# Application Configuration
NODE_ENV=production
PORT=3000

# Game Settings
MAX_PLAYERS_PER_GAME=4
GAME_TIMEOUT_MS=1800000

# Raspberry Pi specific settings
# Set to your Raspberry Pi's IP address for network access
# PI_IP_ADDRESS=192.168.1.100