{
  "name": "contract-crown-pwa",
  "version": "1.0.0",
  "description": "A Progressive Web App for the Contract Crown card game",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd server && npm run dev",
    "build": "vite build && npm run build:server",
    "build:server": "cd server && npm install --production=false",
    "start": "cd server && npm start",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:server": "cd server && npm test",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^9.2.0",
    "cypress": "^13.6.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "type": "module"
}
