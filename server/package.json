{
  "name": "contract-crown-server",
  "version": "1.0.0",
  "description": "Backend server for Contract Crown PWA",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "vitest --run",
    "db:init": "node database/loki-init.js init",
    "db:reset": "node database/loki-init.js reset",
    "db:status": "node database/loki-init.js status",
    "lokijs:init": "node database/loki-init.js init",
    "lokijs:reset": "node database/loki-init.js reset",
    "lokijs:status": "node database/loki-init.js status",
    "seed:users": "node scripts/seed-users.js",
    "backup:create": "node -e 'import(\"./database/loki-db.js\").then(m => m.default.createBackup(\"manual\")).then(console.log).catch(console.error)'",
    "migrate:lokijs": "node scripts/migrate-to-lokijs.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lokijs": "^1.5.12",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "supertest": "^6.3.3",
    "vitest": "^1.0.0"
  }
}
