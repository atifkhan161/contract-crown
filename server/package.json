{
  "name": "contract-crown-server",
  "version": "1.0.0",
  "description": "Backend server for Contract Crown PWA",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "vitest --run",
    "rxdb:init": "node database/rxdb-init.js init",
    "rxdb:reset": "node database/rxdb-init.js reset",
    "rxdb:status": "node database/rxdb-init.js status",
    "rxdb:check": "node scripts/check-rxdb-setup.js",
    "backup:create": "node scripts/backup-manager.js create",
    "backup:list": "node scripts/backup-manager.js list",
    "backup:restore": "node scripts/backup-manager.js restore",
    "backup:validate": "node scripts/backup-manager.js validate",
    "backup:cleanup": "node scripts/backup-manager.js cleanup",
    "backup:help": "node scripts/backup-manager.js help"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lokijs": "^1.5.12",

    "rxdb": "^16.16.0",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "supertest": "^6.3.3",
    "vitest": "^1.0.0"
  }
}
